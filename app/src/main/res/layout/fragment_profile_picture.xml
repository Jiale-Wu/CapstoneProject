<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- ======= TOP BAR ======= -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="@color/headerfootercolor"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back_button"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/tv_profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/oswald"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- ======= TITLE ======= -->
    <TextView
        android:id="@+id/tv_change_profile_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Profile Picture"
        android:textColor="#0D0D0D"
        android:textSize="40sp"
        android:fontFamily="@font/oswald"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp" />

    <!-- ======= BIG PROFILE ICON ======= -->
    <ImageView
        android:id="@+id/img_profile_circle"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@drawable/profile_picture_placeholder"
        android:contentDescription="Profile Placeholder"
        app:layout_constraintTop_toBottomOf="@id/tv_change_profile_picture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp" />

    <!-- ======= EDIT ICON ======= -->
    <ImageView
        android:id="@+id/img_edit"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="96dp"
        android:contentDescription="Edit Icon"
        android:la
        android:src="@drawable/edit_profile_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_profile_circle"
